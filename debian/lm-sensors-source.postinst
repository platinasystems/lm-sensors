#!/bin/sh -e

# Source debconf library.
. /usr/share/debconf/confmodule

# Require confirmation to go on with the installation.
db_get lm-sensors-source/thinkpad-confirmation
if [ "$RET" != "true" ]
then
  db_fset lm-sensors-source/thinkpad-confirmation seen false
  echo "User elected to abort lm-sensors-source installation." >&2
  exit 1
fi

